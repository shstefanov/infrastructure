!!!
html
  head
    title=title
    | <!--[if IE]>
    | <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"><cript>
    | <![endif]-->

    meta(name='viewport', content='width=device-width, initial-scale=1')
   
    script(language='javascript', type='text/javascript').
      config = !{stringifiedConfig};

    each cssStyle in css
      link(href=cssStyle, rel="stylesheet", type="text/css", media='screen')

    each lessStyle in less
      link(href=lessStyle, rel="stylesheet/less", type="text/css", media='screen')

    each script in javascripts
      script(src=script)
  
  -if(!views.layout)
    body
  - else
    body.
      !{views.layout(locals)}
      <script language='javascript', type='text/javascript'>
        window._renderedData = !{renderedData}
      </script>
    
